{
  "name": "exact-search",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin typescript && ncp manifest.json dist/manifest.json",
    "compile": "tsc",
    "coverage": "vitest run --coverage --typecheck",
    "format": "eslint --fix */**.ts *.mjs && prettier . --write",
    "lint": "eslint */**.ts *.mjs --report-unused-disable-directives --max-warnings 0 && prettier . --check",
    "test": "vitest --typecheck",
    "test-once": "npm run coverage",
    "test-all": "npm run lint && npm run compile && npm run test-once"
  },
  "devDependencies": {
    "@8hobbies/eslint-conf-baseline": "^5.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/chrome": "^0.0.279",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@vitest/coverage-v8": "^2.1.3",
    "ncp": "^2.0.0",
    "prettier": "^3.3.3",
    "rollup": "^4.24.2",
    "tslib": "^2.8.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.12.1",
    "vitest": "^2.1.3"
  }
}
