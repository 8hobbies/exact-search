{
  "manifest_version": 3,
  "name": "Exact Search",
  "version": "0.0.1.1",
  "author": "GoodAddon",
  "description": "Toggles exact/verbatim search in search engines.",
  "homepage_url": "https://www.goodaddon.com/exact-search/",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "minimum_chrome_version": "121",
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {},
  "permissions": ["activeTab"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      }
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "exact-search@goodaddon.com",
      "strict_min_version": "121.0"
    }
  }
}
